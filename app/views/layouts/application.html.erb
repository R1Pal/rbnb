<!DOCTYPE html>
<html>
  <head>
    <title>Rbnb</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar-lewagon">
      <div class="navbar-elements">
        <%= link_to root_path do %>
          <%= image_tag "logo.png", alt: "logo", width: 200 %>
        <% end %>
        <div data-controller="dropdown-navbar">
          <div data-action="mouseover->dropdown-navbar#mouse">
            <%= link_to new_user_registration_path, class:"menu-button" do %>
              <div class="menu-icons">
                <span><i class="fa-solid fa-bars navbar-menu"></i></span>
                <span><i class="fa-solid fa-user navbar-user"></i></span>
              </div>
              <div class="togglable-menu d-none" data-dropdown-navbar-target="togglableMenu">
                <div><p class="menu-actions">Log in</p></div>
                <div><p class="menu-actions">Create account</p></div>
                <div><p class="menu-actions">Log out</p></div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
