<%= simple_form_for(item, html: {multipart: true}) do |f| %>
  <div class="modal-header">
    <h5 class="modal-title" id="itemFormLabel">Add a new Item</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <%= f.input :title, label: false, placeholder: "Title" %>
    <%= f.input :artist, label: false, placeholder: "Artist" %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.input :description, label: false, placeholder: "Description" %>
    <%= f.input :category, collection: Item::CATEGORY_NAME %>
    <%= f.input :price, label: false, placeholder: "Price" %>
    <%= f.input :address, label: false, placeholder: "Address" %>
  </div>
  <div class="modal-footer">
    <%= f.submit class: 'btn btn-primary text-white' %>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
  </div>
<% end %>
